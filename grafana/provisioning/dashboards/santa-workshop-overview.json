{
  "uid": "santa-workshop-overview",
  "title": "Santa Workshop Overview",
  "tags": ["santa", "workshop", "observability"],
  "timezone": "",
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "schemaVersion": 39,
  "panels": [
    {
      "id": 5,
      "title": "Wishes per Minute by Category",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 16, "h": 10 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(wishes_received_total[5m])) by (category) * 60",
          "legendFormat": "{{category}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 3,
      "title": "Cache Hit Rate",
      "type": "gauge",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 10 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(inventory_cache_hits_total) / (sum(inventory_cache_hits_total) + sum(inventory_cache_misses_total))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 0.8 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 9,
      "title": "Duplicate Check Duration",
      "description": "Watch this metric increase over time as more wishes accumulate in the database",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 10, "w": 16, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(duplicate_check_duration_seconds_milliseconds_sum[5m]) / rate(duplicate_check_duration_seconds_milliseconds_count[5m])",
          "legendFormat": "optimization={{optimization_enabled}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["mean", "max"] },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 6,
      "title": "Processing Status Distribution",
      "type": "piechart",
      "gridPos": { "x": 16, "y": 10, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(wishes_processed_total) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": { "legend": false, "tooltip": false, "viz": false }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "right", "showLegend": true },
        "pieType": "pie",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}